<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Course</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-serif bg-gray-100 text-gray-800">
  <!-- Header -->
  <div class="bg-gray-800 text-white px-6 py-4 flex items-center justify-between">
    <h1 class="text-xl font-semibold">Learning Management System</h1>
    <a href="/signout" class="bg-red-500 hover:bg-red-700 text-white py-2 px-4 rounded">Signout</a>
</div>

  <!-- Breadcrumb -->
  <div class="px-6 py-4">
    <nav class="text-sm text-gray-600">
      <a href="#" class="text-blue-600 hover:underline">Home</a>
      <span class="mx-2">â€º</span>
      <span class="text-gray-600">Create New Course</span>
    </nav>
  </div>

  <!-- Form Section -->
  <div class="max-w-2xl mx-auto bg-white shadow-md rounded-md px-8 py-6">
    <h2 class="text-2xl font-bold mb-4">Create New Course</h2>
    <form action="/course" method="POST">
      <!-- Label -->
      <label for="course-name" class="block text-gray-700 text-sm font-medium mb-2">
        What is the name of this course?
      </label>
      
      <!-- Input Field -->
      <input 
        type="text" 
        id="course-name" 
        name="name" 
        placeholder="e.g., JavaScript" 
        class="w-full border border-gray-300 rounded-md px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 mb-4"
        required
      />
      <label for="description" class="block text-gray-700 text-sm font-medium mb-2">
        Description?
      </label>
      
      <!-- Input Field -->
      <input 
        type="text" 
        id="description" 
        name="description" 
        placeholder="description" 
        class="w-full border border-gray-300 rounded-md px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 mb-4"
        required
      />

      <!-- Submit Button -->
      <button 
        type="submit" 
        class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-6 rounded-md"
      >
        Submit
      </button>
    </form>
  </div>
</body>
</html>
